--- 
interface Props { title: string; }

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
        <link rel="icon" href="favicon.ico">

		<meta name="viewport" content="width=device-width" />
        <meta name="theme-color" content="#AC9FBB" />
        <meta name="description" content="Психолог. Экзистенциальный аналитик. Ценность моей работы состоит в том, что через консультационную и психотерапевтическую работу, практики осознанности, гвоздетерапию помочь человеку заглянуть в свое подсознание, обратить внимание на себя, освободиться от старых образов, детских травм, установок. Научить его получать удовольствие от жизни, понимать, что жизнь достойна, чтобы ее проживать."/>
        <meta name="keywords" content="психология, анализ, лчиность, люди, общение, терапия, восстановление" />
        <meta name="author" content="mmAir" />

		<link rel="icon" type="image/svg+xml" href="icons/lotus.svg" />
        <link rel="apple-touch-icon" href="icons/lotus-apple.png" />
        <link rel="manifest" href="manifest.json" />

		<title>{ title }</title>
	</head>
	<body>
        <div id="app">
            <slot />
        </div>
	</body>
</html>

<style is:global lang="scss">
    @use '/src/scss/index.scss' as *;

    :root {
        --dark-color: #1D1E2C;
        --gray-color: #59656F;
        --purple-color: #AC9FBB;
        --pink-color: #DDBDD5;
        --biege-color: #F7EBEC;
        --dark-gradient: linear-gradient(to top, #1d1e2cdc 7%, rgba(0, 0, 0, .15) 30%);
        --half-pink-color: #ddbdd534;
        --shadow: linear-gradient(to top, #1d1e2cbe, #1d1e2c2f);
        --shadow-fill: linear-gradient(to top, #1d1e2c63, #1d1e2c63);

        --index: calc(1vh + 1vw);
    }
    
    #app {
        min-height: 100%;
        width: 100%;
        display: flex;
        flex-flow: column;

        scroll-behavior: smooth;
        overscroll-behavior: contain;
        overflow: hidden;
        overflow-y: auto;

        @media (-webkit-transform-3d) {
            perspective: 1px;
            &, * { transform-style: preserve-3d; }
        }
        
        @include scrollbar;
    }

    .nail-therapy-wrapper {
        position: relative;
        display: flex;
        flex-flow: column;
        gap: 10vh;

        width: 100%;
        height: 90vh;

        padding: 1vh 18px;

        overflow-y: auto;
        scroll-behavior: smooth;
        overscroll-behavior: contain;
        
        @include scrollbar;
    }

    .consultation-wrapper {
        display: flex;
        flex-flow: column;
        align-items: center;
        gap: 10vh;

        width: 100%;
        height: 85vh;

        padding: 0 18px;

        overflow-y: auto;
        overflow-x: hidden;
        
        scroll-behavior: smooth;
        overscroll-behavior: contain;

        @include scrollbar;
    }

    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    html {
        font-family: system-ui, sans-serif;

		background: var(--dark-color);

        &, body {
            width: 100%;
            height: 100%;
            
            &.scroll-lock { 
                & #app { overflow: hidden; }
            }
        }
    }

    button { 
        cursor: pointer;
        border: none;
        background: transparent;
        @include outline;
    }

    a {
        text-decoration: none;
        cursor: pointer;
        @include outline;
    }

    li { list-style-type: none; }

    h1, h2 { cursor: default; };
</style>

--- 
interface Props { title: string; }

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/lotus.svg" />
		<title>{ title }</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global lang="scss">
    :root {
        --dark-color: #1D1E2C;
        --gray-color: #59656F;
        --purple-color: #AC9FBB;
        --pink-color: #DDBDD5;
        --biege-color: #F7EBEC;
    }

    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }
    
	html {
		font-family: system-ui, sans-serif;
		background: var(--dark-color);
        height: 100dvh;
	}

    body {
        height: 100%;
        width: 100%;
        display: flex;
        flex-flow: column;
    }
</style>

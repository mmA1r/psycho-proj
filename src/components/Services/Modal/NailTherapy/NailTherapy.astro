---
import Introduction from './Introduction/Introduction';
import Steps from './Steps/Steps';
import Reviews from './Reviews/Reviews';
import Appointment from '../Appointment/Appointment';

import { nailTherapy } from '../../../../data/data.json';
---

<div class={"nail-therapy-wrapper"}>
    <Introduction client:visible />
    <Steps client:only="preact" />
    <Reviews client:visible />
    <Appointment client:visible info={nailTherapy.price}/>
</div>

<style lang="scss">
    @use '/src/scss/index.scss' as *;
    
    .nail-therapy-wrapper {
        display: flex;
        flex-flow: column;
        gap: clamp(120px, 10dvh, 200px);
        width: 100%;
        height: 90dvh;
        padding: 0 18px;
        overflow-y: auto;
        scroll-behavior: smooth;
        overscroll-behavior: contain;
        @include scrollbar;
    }
</style>
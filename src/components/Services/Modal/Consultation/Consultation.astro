---
import Requests from './Requests/Requests';
import Guarantees from './Guarantees/Guarantees';
import Quote from './Quote/Quote';
import Method from './Method/Method';
import Appointment from '../Appointment/Appointment';

import { consultation } from '../../../../data/data.json';
---

<div class="consultation-wrapper">
    <Requests client:visible />
    <Guarantees client:only="preact" />
    <Quote client:visible />
    <Method client:visible/>
    <Appointment client:visible info={consultation.price} type={1} />
</div>

<style lang="scss">
    @use '/src/scss/index.scss' as *;

    .consultation-wrapper {
        display: flex;
        flex-flow: column;
        align-items: center;
        gap: 10dvh;

        width: 100%;
        height: 85dvh;

        padding: 0 18px;

        overflow-y: auto;
        overflow-x: hidden;
        
        scroll-behavior: smooth;
        overscroll-behavior: contain;

        @include desktop-width {
            @include scrollbar;
        }
    }
</style>